{
  "$schema": "https://www.schemastore.org/tsconfig",
  "_version": "22.0.0",

  "compilerOptions": {
    "lib": ["es2024", "ESNext.Array", "ESNext.Collection", "ESNext.Iterator"],
    "moduleResolution": "node16",
    "verbatimModuleSyntax": true,
    "module": "nodenext",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "./",
    "paths": {
      "@/*": ["./*"]
    }
  },

  "include": ["**/*"],
  "exclude": ["dist"]
}
